{
  "name": "shopcn",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "postinstall": "find ./node_modules/@esbuild* -type f -perm +111 -exec codesign -s - -f --preserve-metadata=entitlements,requirements,flags,runtime {} + || true"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@better-auth/stripe": "^1.2.12",
    "stripe": "^18.3.0"
  }
}
